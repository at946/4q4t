<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Name</th>
      <th>Ans q1</th>
      <th>Ans q2</th>
      <th>Ans q3</th>
      <th>Ans q4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.team_id %></td>
        <td><%= answer.name %></td>
        <td><%= answer.ans_q1 %></td>
        <td><%= answer.ans_q2 %></td>
        <td><%= answer.ans_q3 %></td>
        <td><%= answer.ans_q4 %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
